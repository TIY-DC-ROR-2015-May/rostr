<h1><%= @team.name %></h1>

<table id="roster" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @team.players.each do |player| %>
      <tr id="player_id_<%= player.id %>">
        <td><%= player.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button class="btn btn-default">Save!</button>